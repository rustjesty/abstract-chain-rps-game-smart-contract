# =============================================================================
# Abstract Chain RPS Game Smart Contract - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp config.env.example .env

# =============================================================================
# ABSTRACT CHAIN CONFIGURATION
# =============================================================================

# Mainnet Configuration
ABSTRACT_RPC_URL=https://rpc.abstractchain.com
ABSTRACT_CHAIN_ID=1234
ABSTRACT_EXPLORER_API_KEY=your_explorer_api_key_here
ABSTRACT_EXPLORER_API_URL=https://explorer.abstractchain.com/api
ABSTRACT_EXPLORER_URL=https://explorer.abstractchain.com

# Testnet Configuration
ABSTRACT_TESTNET_RPC_URL=https://testnet-rpc.abstractchain.com
ABSTRACT_TESTNET_CHAIN_ID=5678
ABSTRACT_TESTNET_EXPLORER_API_KEY=your_testnet_explorer_api_key_here
ABSTRACT_TESTNET_EXPLORER_API_URL=https://testnet-explorer.abstractchain.com/api
ABSTRACT_TESTNET_EXPLORER_URL=https://testnet-explorer.abstractchain.com

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Private key for deployment (without 0x prefix)
# WARNING: Never commit your private key to version control!
PRIVATE_KEY=your_private_key_here

# Gas price configuration (optional)
# Use "auto" for automatic gas price or specify in wei
GAS_PRICE=auto

# Gas limit for deployment (optional)
GAS_LIMIT=5000000

# =============================================================================
# CONTRACT INTERACTION
# =============================================================================

# Contract address after deployment (for interaction scripts)
CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Enable gas reporting (true/false)
REPORT_GAS=true

# Enable contract verification (true/false)
VERIFY_CONTRACTS=true

# Test network configuration
HARDHAT_NETWORK_RPC_URL=http://127.0.0.1:8545

# =============================================================================
# SECURITY & MONITORING
# =============================================================================

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Alchemy API key (if using Alchemy for RPC)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Infura API key (if using Infura for RPC)
INFURA_API_KEY=your_infura_api_key_here

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Frontend contract address (for web interface)
FRONTEND_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Frontend network configuration
FRONTEND_NETWORK_NAME=Abstract Chain
FRONTEND_NETWORK_RPC_URL=https://rpc.abstractchain.com
FRONTEND_NETWORK_CHAIN_ID=1234
FRONTEND_NETWORK_EXPLORER_URL=https://explorer.abstractchain.com

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# Example: Local Hardhat Network
# HARDHAT_NETWORK_RPC_URL=http://127.0.0.1:8545
# PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Example: Abstract Chain Testnet
# ABSTRACT_TESTNET_RPC_URL=https://testnet-rpc.abstractchain.com
# ABSTRACT_TESTNET_CHAIN_ID=5678
# PRIVATE_KEY=your_testnet_private_key_here

# Example: Abstract Chain Mainnet
# ABSTRACT_RPC_URL=https://rpc.abstractchain.com
# ABSTRACT_CHAIN_ID=1234
# PRIVATE_KEY=your_mainnet_private_key_here

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. Replace all placeholder values with your actual configuration
# 2. Never commit your .env file to version control
# 3. Keep your private keys secure and never share them
# 4. Use testnet for development and testing
# 5. Only use mainnet for production deployments
# 6. Regularly update your API keys and endpoints
# 7. Monitor gas prices and adjust GAS_PRICE accordingly
# 8. Set appropriate gas limits for your transactions
# 9. Enable gas reporting during development
# 10. Verify contracts after deployment for transparency
#
# =============================================================================
